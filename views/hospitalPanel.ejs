<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/styles.css" rel="stylesheet">
  <title><%=title%></title>
</head>
<body>
  <%- include("header", {buttonVisibility:false, signoutVisibility:true})%>
  <% if(messages && messages.error && messages.error.length > 0)  { %>
    <% for(var i = 0; i < messages.error.length; i++) { %>
      <p class="bg-red-500 m-5 rounded mx-10 px-10 py-2 text-white"><%= messages.error[i] %></p>
    <% } %>
  <% } %>
  <% if(messages && messages.success && messages.success.length > 0)  { %>
    <% for(var i = 0; i < messages.success.length; i++) { %>
      <p class="bg-green-500 m-5 rounded mx-10 px-10 py-2 text-white"><%= messages.success[i] %></p>
    <% } %>
  <% } %>
  <div class="flex flex-col m-10 gap-5">
  <p class="text-xl">Enter total allocable data</p>
    <div class="bg-studio-200 p-10 drop-shadow-xl">
      <form class="flex justify-between items-center" action="hospitalpanel/total-data" method="post">
        <input class="p-5" type="number" placeholder="General Beds" name="generalBed" required>
        <input class="p-5" type="number" placeholder="ICU Beds" name="icuBed">
        <input class="p-5" type="number" placeholder="Ventilator Units" name="ventilator">
        <button class="bg-orange-600 text-white px-10 py-2 rounded-xl" type="submit">Update</button>
      </form>
    </div> 
  <p class="text-xl">Enter Occupied data</p>
    <div class="bg-green-300 p-10 drop-shadow-xl">
      <form class="flex justify-between items-center" action="hospitalpanel/occupancy-update" method="post">
        <input class="p-5" type="number" placeholder="General Beds" name="occupiedGeneralBed" required>
        <input class="p-5" type="number" placeholder="ICU Beds" name="occupiedIcuBed">
        <input class="p-5" type="number" placeholder="Ventilator Units" name="occupiedVentilator">
        <button class="bg-orange-600 text-white px-10 py-2 rounded-xl" type="submit">Update</button>
      </form>
    </div>
  <%if(overviewData){%>
  <p class="text-xl">Your Hospital data</p>
  <div class="flex border p-5 gap-10 bg-studio-200">
    <div class="flex flex-col items-center border-white border-2">
      <p class="px-5 py-2">Total General Bed</p>
      <p class="px-5 py-2 bg-white w-full text-center"><%=generalBed%></p>
    </div>
    <div class="flex flex-col items-center border-white border-2">
      <p class="px-5 py-2">Total ICU Bed</p>
      <p class="px-5 py-2 bg-white w-full text-center"><%=icuBed%></p>
    </div>
    <div class="flex flex-col items-center border-white border-2">
      <p class="px-5 py-2">Total Ventilator Units</p>
      <p class="px-5 py-2 bg-white w-full text-center"><%=ventilator%></p>
    </div>
    <div class="flex flex-col items-center border-white border-2">
      <p class="px-5 py-2">Occupied General Beds</p>
      <p class="px-5 py-2 bg-white w-full text-center"><%=occupiedGeneralBed%></p>
    </div>
    <div class="flex flex-col items-center border-white border-2">
      <p class="px-5 py-2">Occupied ICU Beds</p>
      <p class="px-5 py-2 bg-white w-full text-center"><%=occupiedIcuBed%></p>
    </div>
    <div class="flex flex-col items-center border-white border-2">
      <p class="px-5 py-2">Occupied Ventilator Unit</p>
      <p class="px-5 py-2 bg-white w-full text-center"><%=occupiedVentilator%></p>
    </div>
  </div>
  <%}%>
  </div>
</body>
</html>